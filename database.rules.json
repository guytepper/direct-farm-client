{
  "rules": {
    // FARMS
    "farms": {
      // TEMPORARY UNTIL RELEASE
    	".read": "root.child('users').child(auth.uid).child('isAdmin').val() === true",
    	".write": "root.child('users').child(auth.uid).child('isAdmin').val() === true"
    },
    // PENDING FARMS
  	"pending_farms": {
    	".read": "root.child('users').child(auth.uid).child('isAdmin').val() === true",
    	".write": "true",
      "$id": {
        ".validate": "newData.hasChildren(['name', 'address', 'phone'])",
       	"name": {
       		".validate": "newData.isString() && newData.val().length > 1 && newData.val().length < 30"
      	}
      }
    },
    // LOCATIONS
    "locations": {
      ".read": "auth.uid === ",
    	".write": "root.child('users').child(auth.uid).child('isAdmin').val() === true"
    },
    // USERS
    "users": {
      ".read": "true",
      ".write": "false"
    }
  }
}
